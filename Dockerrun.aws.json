{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/deployment/etc/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "command": ["/bin/bash", "-c", "envsubst '${STAGING_SERVICE}${STAGING_NGINX_SERVER_NAME}${PRODUCTION_SERVICE}${PRODUCTION_NGINX_SERVER_NAME}' < /etc/nginx/conf.d/default.conf.source > /etc/nginx/conf.d/default.conf && nginx -g 'daemon off;'"],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": false
        }
      ]
    }
  ]
}
